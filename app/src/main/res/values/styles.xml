<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/background</item>

    </style>

    <style name="SpinnerText1">
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:shadowColor">#999999</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:textSize">@dimen/text_size2</item>
    </style>

    <style name="SpinnerText2">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:shadowColor">#999999</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:textSize">@dimen/text_size2</item>
    </style>

</resources>
