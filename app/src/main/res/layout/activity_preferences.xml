<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:text="@string/preferencias_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/height_padding_title"
        android:paddingBottom="@dimen/height_padding_title"
        android:textSize="@dimen/title_main"
        android:gravity="center"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/view_color"
        android:layout_height="2dp"/>

    <TextView
        android:text="@string/label_sistemas_medicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/text_size2"/>

    <RadioGroup
        android:id="@+id/radioGroupSistemas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rdbMetrico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/label_sistema_metrico"
            android:textSize="@dimen/text_size2"/>

        <RadioButton
            android:id="@+id/rdbIngles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/label_sistema_ingles"
            android:textSize="@dimen/text_size2"/>


    </RadioGroup>



</LinearLayout>
