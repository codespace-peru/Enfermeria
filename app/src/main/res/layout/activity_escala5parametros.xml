<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_above="@+id/adViewEscala5Param">

        <TextView
            android:id="@+id/textViewTitleEscala"
            android:text="@string/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/height_padding_title"
            android:paddingBottom="@dimen/height_padding_title"
            android:textSize="@dimen/title_main"
            android:gravity="center"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/view_color">
        </View>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewVariable1"
                android:text="@string/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:layout_marginTop="@dimen/layout_top_margin_size"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerVariable1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown"
                    android:layout_weight="9">
                </Spinner>
                <TextView
                    android:id="@+id/textViewItemEscala1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textSize="@dimen/text_size3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="2"/>
            </LinearLayout>


            <TextView
                android:id="@+id/textViewVariable2"
                android:text="@string/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerVariable2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown"
                    android:layout_weight="9">
                </Spinner>
                <TextView
                    android:id="@+id/textViewItemEscala2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="@dimen/text_size3"/>
            </LinearLayout>


            <TextView
                android:id="@+id/textViewVariable3"
                android:text="@string/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerVariable3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown"
                    android:layout_weight="9">
                </Spinner>
                <TextView
                    android:id="@+id/textViewItemEscala3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="@dimen/text_size3"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewVariable4"
                android:text="@string/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerVariable4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown"
                    android:layout_weight="9">
                </Spinner>
                <TextView
                    android:id="@+id/textViewItemEscala4"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textSize="@dimen/text_size3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewVariable5"
                android:text="@string/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerVariable5"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown"
                    android:layout_weight="9">
                </Spinner>
                <TextView
                    android:id="@+id/textViewItemEscala5"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textSize="@dimen/text_size3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewResultadoEscala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/text_size3"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewEscalaNotas"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:visibility="gone"/>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewEscala5Param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="SMART_BANNER"/>

</RelativeLayout>
