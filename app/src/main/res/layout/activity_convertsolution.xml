<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleFormula1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_title_size"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="test"
            android:gravity="center"
            android:textSize="@dimen/title_main"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/rojo"/>

    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_height_title_size"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tvTargetVolumen"
                        android:textStyle="bold"
                        android:text="TEXTVIEW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size2"/>

                    <EditText
                        android:id="@+id/etInput1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:numeric="decimal"
                        android:background="@color/blanco"
                        android:textSize="@dimen/text_size2"
                        android:layout_weight="2"
                        android:maxLength="4"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTargetSolucion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="TEST"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size2"
                    />

                <Spinner
                    android:id="@+id/spinnerTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/light_blue_dropdown_normal"/>

                <TextView
                    android:id="@+id/tvBaseSolucion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="TEST"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size2"
                    />

                <Spinner
                    android:id="@+id/spinnerBase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/light_blue_dropdown_normal"/>

                <TextView
                    android:id="@+id/tvMixSolucion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="TEST"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size2"
                    />

                <Spinner
                    android:id="@+id/spinnerMix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/light_blue_dropdown_normal"
                    />

                <TextView
                    android:id="@+id/tvResultado1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size3"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvResultado2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size3"
                    android:visibility="gone"
                    android:textStyle="bold"/>
            </LinearLayout>
        </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView android:id="@+id/adViewConvertSolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            ads:adUnitId="ca-app-pub-4549935446415170/4450174044"
            ads:adSize="BANNER"/>
    </LinearLayout>

</RelativeLayout>