<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleFormula"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_title_size"
                android:textStyle="bold"
                android:text="text"
                android:gravity="center"
                android:textSize="@dimen/title_main"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/rojo"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/text_size1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etInput1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:numeric="decimal"
                    android:background="@color/blanco"
                    android:textSize="@dimen/text_size3"
                    android:layout_weight="2"
                    android:maxLength="4"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="=>"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size3"/>


                <EditText
                    android:id="@+id/etInput2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:numeric="decimal"
                    android:background="@color/blanco"
                    android:textSize="@dimen/text_size3"
                    android:layout_weight="2"
                    android:maxLength="4"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etInput3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:numeric="decimal"
                    android:background="@color/blanco"
                    android:textSize="@dimen/text_size3"
                    android:layout_weight="2"
                    android:maxLength="4"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="=>"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/text_size3"/>

                <TextView
                    android:id="@+id/tvResultado1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size3"
                    android:layout_weight="2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="X"
                    android:gravity="center"
                    android:textColor="@color/text_color1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewReglasParam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            ads:adUnitId="ca-app-pub-4549935446415170/4450174044"
            ads:adSize="LARGE_BANNER"/>
    </LinearLayout>

</RelativeLayout>
