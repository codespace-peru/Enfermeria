<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:layout_below="@+id/myToolbar"
        android:layout_above="@+id/adViewInput2Param"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInput1"
                    android:textStyle="bold"
                    android:text="@string/test"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="5"
                    android:textSize="@dimen/textsize_xmedium"/>
                <EditText
                    android:id="@+id/etInput1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:background="@color/blanco"
                    android:textSize="@dimen/textsize_xmedium"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:maxLength="5"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:padding="@dimen/padding_small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInput2"
                    android:textStyle="bold"
                    android:text="@string/test"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="5"
                    android:textSize="@dimen/textsize_xmedium"/>
                <EditText
                    android:id="@+id/etInput2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:background="@color/blanco"
                    android:textSize="@dimen/textsize_xmedium"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:maxLength="5"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:padding="@dimen/padding_small"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvResultado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:paddingTop="@dimen/padding_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/textsize_large"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvResultado2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:paddingTop="@dimen/padding_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/textsize_large"
                android:visibility="gone"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:paddingTop="@dimen/padding_medium"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/textsize_xmedium"/>
        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewInput2Param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="SMART_BANNER"/>


</RelativeLayout>
