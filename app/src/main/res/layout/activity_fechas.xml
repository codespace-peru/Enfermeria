<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_above="@+id/adViewFechas"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/tvTitleFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/height_padding_title"
            android:paddingBottom="@dimen/height_padding_title"
            android:textStyle="bold"
            android:text="@string/test"
            android:gravity="center"
            android:textSize="@dimen/title_main"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/view_color"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/test"
            android:textSize="@dimen/text_size2"/>

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:textSize="@dimen/text_size2"
            android:text="@string/test"/>

        <DatePicker
            android:id="@+id/datePickerFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:calendarViewShown="false"/>

        <TextView
            android:id="@+id/tvResultado1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size3"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="X"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/text_color1"/>



    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewFechas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="SMART_BANNER"/>

</RelativeLayout>
